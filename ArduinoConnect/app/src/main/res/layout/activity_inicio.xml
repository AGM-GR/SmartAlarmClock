<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="agm.andruino.arduinoconnect.Inicio">

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LEDButton"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="LED:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LEDText"
        android:textSize="36sp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/LEDButton"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Color:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LEDText"
        android:layout_alignStart="@+id/LEDText"
        android:layout_marginTop="18dp"
        android:id="@+id/ColorText"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Rojo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/REDText"
        android:textSize="30sp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/ColorText"
        android:layout_alignStart="@+id/ColorText" />

    <TextView
        android:text="Verde:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GREENText"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/REDseek"
        android:layout_alignStart="@+id/REDText" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:ems="10"
        android:id="@+id/GREENNumber"
        android:hint="0"
        android:text="0"
        android:layout_above="@+id/GREENseek"
        android:layout_alignStart="@+id/REDNumber"
        android:singleLine="true"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:numeric="integer"
        android:maxLength="3" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GREENseek"
        android:layout_below="@+id/GREENText"
        android:layout_alignParentStart="true"
        android:max="255"
        android:progress="0" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/REDNumber"
        android:singleLine="true"
        android:selectAllOnFocus="false"
        android:text="0"
        android:numeric="integer"
        android:maxLength="3"
        android:layout_height="50dp"
        android:layout_width="40dp"
        android:hint="0"
        android:layout_alignBottom="@+id/REDText"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/REDseek"
        android:max="255"
        android:progress="0"
        android:layout_below="@+id/REDText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Azul:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/BLUEText"
        android:textSize="30sp"
        android:layout_below="@+id/GREENseek"
        android:layout_alignStart="@+id/GREENText" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BLUEseek"
        android:layout_below="@+id/BLUEText"
        android:layout_alignParentStart="true"
        android:progress="0"
        android:max="255" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/BLUENumber"
        android:layout_above="@+id/BLUEseek"
        android:layout_alignParentEnd="true"
        android:hint="0"
        android:singleLine="true"
        android:selectAllOnFocus="false"
        android:text="0"
        android:numeric="integer"
        android:maxLength="3" />

</RelativeLayout>
